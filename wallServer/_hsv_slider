#!/usr/bin/perl

use strict;
use ceilingLight;
use Time::HiRes qw(usleep);


ceilingLight::init();


my $h = 0;


while(1)
{
	$h+=4.2;
	

	$h = 0 if $h >= 360;

	(my $r2,my $g2,my $b2) = ceilingLight::hsv2rgb($h,1,1);
	
	my $r1 = int($r2*55);
	my $g1 = int($g2*55);
	my $b1 = int($b2*55);

	my $sum = $r1+$g1+$b1;

	my $div = $sum / 255;


#	$r1 /= $div;
#	$g1 /= $div;
#	$b1 /= $div;


	ceilingLight::setColor(0,$r1,$g1,$b1,0);
	ceilingLight::readline();	

	usleep(9001);

}
warn ceilingLight::read();

